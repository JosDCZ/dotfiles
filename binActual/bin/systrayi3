#!/bin/bash

hidden=/tmp/syshidei3.lock
file="/home/josue/.config/polybari3/modules.ini"

if [[ $(pidof stalonetray) ]]; then
	if [[ ! -e $hidden ]]; then
		polybar-msg action "#systrayi3.hook.1"
		xdo hide -n stalonetray
		touch "$hidden"
		perl -0 -i -pe 's/systrayi3\ninitial=.*/systrayi3\ninitial=2/g' "$file"
	else
		polybar-msg action "#systrayi3.hook.0"
		xdo show -n stalonetray
		xdo raise -n stalonetray
		rm "$hidden"
		perl -0 -i -pe 's/systrayi3\ninitial=.*/systrayi3\ninitial=1/g' "$file"
	fi
else
	stalonetray &
fi
